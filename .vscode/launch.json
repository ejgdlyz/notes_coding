    "version": "0.2.0",
    "configurations": [
		{
			"name": "nodes_coding_debug",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/high-performance-server-programming-linux/tests/chatroom_server",

			
			"args": ["127.0.0.1", "9001"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "为 gdb 启用整齐打印",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			//"preLaunchTask": "C/C++: g++-8 build active file",  //!不需要前置任务
			"miDebuggerPath": "/usr/bin/gdb"
		}
	]
}